<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".title_header"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home_nav_header"), root_path %></li>
        <li><%= link_to t(".help_nav_header"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".content_users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".content_account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".content_profile"), current_user %></li>
              <li><%= link_to t(".content_settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".content_logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
         <% else %>
          <li><%= link_to t(".log_in_nav_header"), login_path %></li>
         <% end %>
      </ul>
    </nav>
  </div>
</header>