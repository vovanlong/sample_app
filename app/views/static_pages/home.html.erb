<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "static_pages.home.h3" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".p" %></h1>
  <h2>
    <%= t ".p1" %>
    <%= link_to t(".link_home"), t(".href") %>
    <%= t ".p2" %>
  </h2>
	<%= link_to t(".link_rails"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png", alt: t(".p3")), t(".href_3") %>
<% end %>
    