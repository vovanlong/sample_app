<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost.number_micropost_html), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
  	<%= micropost.content %>
  	 <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.micropost_html.content_posted" %> <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to t("microposts.micropost_html.link_delete"), micropost, method: :delete, data: { confirm: t("microposts.micropost_html.content_sure") } %>
    <% end %>
  </span>
</li>
